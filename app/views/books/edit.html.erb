<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
<form>
  <div>
    <h4>Title<h4>
    <%= f.text_field :title %>
  </div>

  <div>
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Update book' %>
  </div>
</form>
<% end %>

<a><%= link_to "Show", book_path(book.id) %></a> |
<a><%= link_to "Back", books_path %></a>